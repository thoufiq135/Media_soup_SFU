    socket.on("leaveRoom", () => {

  const roomid = socket.roomid;
  if (!roomid) return;

  if (socket.consumer) socket.consumer.close();

  if (socket.producer) {
    socket.producer.close();

    socket.to(roomid).emit("producerClosed", {
      producerId: socket.producer.id
    });
  }

  if (socket.sendTransport){
 socket.sendTransport.close();
socket.sendTransport = null;
}
  if (socket.recvTransport){
 socket.recvTransport.close();
socket.recvTransport = null;
}

  rooms[roomid].users =
    rooms[roomid].users.filter(id => id !== socket.id);

  socket.leave(roomid);
});

    socket.on("disconnect",()=>{
        const room = rooms[socket.roomid];
    if (!room) return;

    // Remove user
    room.users = room.users.filter(id => id !== socket.id);

    // Remove their producers
    if (socket.producers) {
        socket.producers.forEach(p => {
            room.producers = room.producers.filter(rp => rp.id !== p.id);
            p.close();
        });
    }

    console.log("User disconnected:", socket.id);
    })
})
